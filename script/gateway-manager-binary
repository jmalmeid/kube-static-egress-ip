set -e

GIT_COMMIT=$(git describe --tags --dirty --always)
BUILD_FLAGS=(-ldflags="-w -X github.com/jmalmeid/kube-static-egress-ip/pkg/version.Version=${GIT_COMMIT}")

# Get rid of existing binary
echo "Removing old static-egressip-gateway-manager binary"
rm -f ./static-egressip-gateway-manager

echo "Building static egress IP gateway manager binary"
# Build static-egressip-gateway-manager
CGO_ENABLED=0 go build -o static-egressip-gateway-manager \
    "${BUILD_FLAGS[@]}" \
    github.com/jmalmeid/kube-static-egress-ip/cmd/static-egressip-gateway-manager/...

if [ $? -eq 0 ]; then
  echo "Building static egress IP gateway manager binary successful."
else
  echo "Building static egress IP gateway manager binary failed."
fi
